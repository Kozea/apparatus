<form class="form-horizontal" {% if action %} action="{{ action }}" {% endif %} method="post" enctype="multipart/form-data">
  {%- for field in view.create_fields %}
    {%- if field.widget.input_type != 'hidden' -%}
      <div class="form-group{{ ' has-error' if field.errors }}">
        {%- if field.errors -%}
          {{ field.label(class="col-sm-2 control-label", title=', '.join(field.errors)) }}
        {%- else -%}
          {{ field.label(class="col-sm-2 control-label") }}
        {%- endif -%}
        <div class="col-sm-10">
          {{ field(class="form-control", placeholder=field.label.text) }}
        </div>
      </div>
    {%- endif %}
  {%- endfor %}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-default btn-primary" />
      <a class="btn btn-default" href="javascript:window.history.go(-1)">Back</a>
    </div>
  </div>
</form>
